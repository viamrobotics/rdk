{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "lerna run --stream prepare",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build --stream",
    "build:dls": "lerna run build --stream --scope=dls",
    "build:control": "lerna run build --stream --scope=control",
    "build:api": "lerna run build --stream --scope=rdk-api",
    "storybook:dls": "lerna run storybook --stream --scope=dls"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
