{
  "extends": "@viamrobotics/typescript-config/base.json",
  "compilerOptions": {
    "types": [
      "vite/client",
      "@vue-macros/reactivity-transform/macros-global"
    ],
  
    // Export options
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },

    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "src/**/*.svelte"],
}
