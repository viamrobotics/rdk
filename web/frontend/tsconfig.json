{
  "extends": "@viamrobotics/typescript-config/base.json",
  "compilerOptions": {
    "types": ["vite/client", "vitest"],

    // Export options
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    "noPropertyAccessFromIndexSignature": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "cypress/**/*.ts",
    "scripts/*.js",
    "*.ts",
    "*.js"
  ]
}
