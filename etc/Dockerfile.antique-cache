ARG MAIN_TAG=ghcr.io/viamrobotics/canon
ARG BASE_TAG=amd64

FROM $MAIN_TAG:$BASE_TAG as builder
COPY --chown=1000:1000 ./ /tmp/rdk
RUN --mount=type=secret,id=netrc,uid=1000,dst=/home/testbot/.netrc sudo -Hu testbot bash -lc 'cd /tmp/rdk && NO_UPX=1 make server-static'

FROM $MAIN_TAG:$BASE_TAG
COPY --from=builder --chown=1000:1000 /home/testbot/go /home/testbot/go
COPY --from=builder --chown=1000:1000 /home/testbot/.cache /home/testbot/.cache
